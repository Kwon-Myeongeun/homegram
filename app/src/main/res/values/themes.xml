<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Homegram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bear</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/bear</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.Homegram.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Homegram.EditText" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Homegram.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_baseline_mail_outline_24</item>
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
</resources>